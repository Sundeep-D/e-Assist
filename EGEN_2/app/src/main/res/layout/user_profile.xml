<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:backgroundTint="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_margin="3dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_circleImage_inflatelayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/bck_for_intro" />

    <TextView
        android:id="@+id/user_name_inflatelayout"
        android:text="D.SUNDEEP"
        android:layout_below="@id/user_image_circleImage_inflatelayout"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/user_UID_inflatelayout"
        android:text="Yda73dmCHqd3G0xVr0GIGS6IYlA3"
        android:layout_below="@id/user_name_inflatelayout"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5c5fa7"
        />

        <LinearLayout
            android:layout_below="@id/user_UID_inflatelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/logout_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15sp"
                android:padding="20dp"
                android:layout_weight="1"
                android:text="L O G  O U T"
                android:textAlignment="center"
                android:onClick="logout"/>
            <TextView
                android:id="@+id/dissmiss_tv"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15sp"
                android:padding="20dp"
                android:layout_weight="1"
                android:text="D I S M I S S"
                android:onClick="dismiss_inflate"/>



        </LinearLayout>



    </RelativeLayout>


</android.support.v7.widget.CardView>
