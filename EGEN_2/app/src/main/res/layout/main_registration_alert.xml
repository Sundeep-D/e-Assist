<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alert_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are one step away!"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="@color/subcolor"
            />
        <TextView
            android:id="@+id/alert_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do Register now"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:layout_below="@id/alert_heading"
            />
        <TextView
            android:id="@+id/alert_why_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why I have to Register?"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="#514fbe"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_below="@id/alert_desc"
            android:onClick="why_i_have_to_register_weblink"
            />
        <Button
            android:id="@+id/alert_take_me_to_registration_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alert_why_reg"
            android:layout_centerHorizontal="true"
            android:background="@color/subcolor"
            android:text="Take me to Registration page"
            android:textStyle="normal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="50dp"
            android:onClick="take_me_to_registration_page"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/alert_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind me next time"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="#bf000000"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_below="@id/alert_take_me_to_registration_page"
            android:onClick="dismiss"
            />





    </RelativeLayout>
    
    

</android.support.v7.widget.CardView>
