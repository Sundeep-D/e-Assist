<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Show_User_Details">

    <android.support.v7.widget.CardView
        android:id="@+id/head_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="#cc3838"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="18dp">

        <TextView
            android:id="@+id/emergency_heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Emergency"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:textAlignment="center"/>


    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_below="@+id/head_card"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">






        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="15dp"
                card_view:cardMaxElevation="30dp"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/user_image_IV"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/logo"
                    android:scaleType="centerCrop"/>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                card_view:cardMaxElevation="18dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/user_name_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text=""
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/user_address_TV"
                    android:layout_below="@id/user_name_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:text=""
                    android:textColor="#aba5a5"
                    android:layout_marginTop="20dp"/>



                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                card_view:cardMaxElevation="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lay_call_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="call_emergency_contact_1">
                    <TextView
                        android:id="@+id/call_TV_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call Emergency Contact 1"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="22dp"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/phone"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="22dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lay_call_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:onClick="call_emergency_contact_2">
                        <TextView
                            android:id="@+id/call_TV_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Emergency Contact 2"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/phone"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"/>
                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>








        </LinearLayout>

    </ScrollView>


</RelativeLayout>